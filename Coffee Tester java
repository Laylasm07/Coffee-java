import java.util.Scanner;

public class CoffeeTester {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		
		System.out.println("Welcome to Coffee Hour!!!\n");
		
		//Create two Coffee objects
		Coffee coffee1 = new Coffee();
		Coffee coffee2 = new Coffee();
		
		//Get user input for first Coffee
		System.out.println("What's the name of the first coffee?\n");
		String name1 = input.nextLine();
		coffee1.setName(name1);
		
		System.out.print("What's the caffeine content?\n");
		double caffeine1 = input.nextDouble();
		coffee1.setCaffeine(caffeine1);
		input.nextLine(); //clear buff
				
		//Get user input for second Coffee
		System.out.println("\nWhat's the name of the second coffee?\n");
		String name2 = input.nextLine();
		coffee2.setName(name2);
		
		System.out.print("What is the caffeine content?\n");
		double caffeine2 = input.nextDouble();
		coffee2.setCaffeine(caffeine2);
		
		//Display results
		System.out.printf("\nIt would take %.1f cups of %s before it's dangerous to drink more.\n",
				coffee1.riskyAmount(), coffee1.getName());
		System.out.printf("It would take %.1f cups of %s before it's dangerous to drink more.\n",
				coffee2.riskyAmount(), coffee2.getName());
		
		input.close();
	}

